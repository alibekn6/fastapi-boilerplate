# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=Testing
DEBUG=false
ENVIRONMENT=development
API_VERSION=v1

# ============================================================================
# Database Configuration
# ============================================================================
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myapp

# ============================================================================
# JWT Configuration
# ============================================================================
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-256-bit-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Security Settings
# ============================================================================
# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=*

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ============================================================================
# Password Requirements
# ============================================================================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=false

# ============================================================================
# Session Management
# ============================================================================
MAX_SESSIONS_PER_USER=5
SESSION_ABSOLUTE_TIMEOUT_DAYS=30

# ============================================================================
# Email Configuration (Optional - for password reset, verification)
# ============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=Testing App
EMAIL_VERIFICATION_ENABLED=false

# ============================================================================
# Redis Configuration (Optional - for Celery, rate limiting)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# Celery Configuration (Optional - for background tasks)
# ============================================================================
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

# ============================================================================
# File Upload Settings
# ============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx
UPLOAD_DIR=/tmp/uploads

# ============================================================================
# Admin Settings
# ============================================================================
ADMIN_REGISTRATION_ENABLED=false
REQUIRE_REGISTRATION_TOKEN=false

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# Monitoring (Optional)
# ============================================================================
METRICS_ENABLED=true
SENTRY_DSN=
